<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tbz.practice.fireblog.PostActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_post">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:layout_below="@+id/btnImageSelect"
                android:layout_centerHorizontal="true"
                android:id="@+id/titleEt"
                android:padding="15dp"
                android:hint="Post Title.." />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:layout_below="@+id/titleEt"
                android:layout_centerHorizontal="true"
                android:id="@+id/descriptionEt"
                android:padding="15dp"
                android:hint="Post Description.." />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/add_btn"
                android:id="@+id/btnImageSelect"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:alpha="0.7"/>

            <Button
                android:text="Submit Post"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSubmit"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/descriptionEt"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignStart="@+id/descriptionEt"
                android:layout_alignEnd="@+id/descriptionEt" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
